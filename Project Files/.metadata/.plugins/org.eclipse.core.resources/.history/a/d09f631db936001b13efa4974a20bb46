package GasPumps;
import Data.*;
import MDA_EFSM.*;
import OP.OP;
import AF.*;

public class GP1 {
	public DataStore d;
	public MDA_EFSM m;
	public OP p;
	public GP1Factory af;
	
	public GP1() {
		d = new DataStore();
		af = new GP1Factory(d);
		p = new OP(af);
		m = new MDA_EFSM(p);
	}
	
	public void Activate(int a) {
		if(a>0) {
			(DS1)d.temp_a = a;
			m.Activate();
		}
	}
	
	public void PayCash(int c) {
		if(c>0) {
			(DS1)d.temp_c = c;
			m.PayCash();
		}
	}
	
	public void PayCredit() {
		m.PayCredit();
	}
	
	public void Approved() {
		m.Approved();
	}
	
	public void Reject() {
		m.Reject();
	}
	
	public void Cancel() {
		m.Cancel();
	}
	
	public void StartPump() {
		m.StartPump();
	}
	
	public void PumpLiter() {
		m.Pump();
	}
	
	public void StopPump() {
		m.StopPump();
	}
	
	public void Start() {
		m.Start();
	}
}
